{
    "rewrites": [
        {
            "source": "/api(.*)",
            "destination": "/api/index.py"
        },
        {
            "source": "/",
            "destination": "/public/index.html"
        },
        {
            "source": "/(.*)",
            "destination": "/public/$1"
        }
    ],
    "functions": {
        "api/index.py": {
            "includeFiles": "data/**, src/**, backend/**"
        }
    }
}